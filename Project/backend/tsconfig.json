{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
        ],
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*",
        "**/tests/*.spec.ts"
    ],
    "buildOnSave": true,
    "compileOnSave": true
}